                                            $(this).remove();
                                        },
                                        resizable: true,
                                        modal: true,
                                        buttons: {
                                            'Tamam': function () {
                                                $(this).dialog('close');
                                                window.location.reload(false);
                                            }
                                        }
                                    });
                                }
                                else if (data == "2") {                                   
                                    $('<div title="Kaydetme İşlemi"></div>').dialog({
