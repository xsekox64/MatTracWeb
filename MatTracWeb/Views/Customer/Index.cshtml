                    }
                    else if (yakitturu == "0") {
                        document.getElementById("generalCarError").innerHTML = "Yakıt Türü Alanı Boş Geçilemez !!!";
                    }
                    else if (araccinsi == "0") {
                        document.getElementById("generalCarError").innerHTML = "Araç Cinsi Alanı Boş Geçilemez !!!";
                    }
                    else {
                        var myData = {
                            CustomerId: CustomerId,
                            Marka: marka,
                            Model: model,
                            ModelYear: modelYili,
                            Kilometer: kilometer,
                            Plaka: plaka,
                            SasiNo: sasino,
                            MotorNo: motorno,
