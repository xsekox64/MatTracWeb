                                $('#CustomerModalNew').modal('hide');
                                $('<div title="Hata"></div>').dialog({
                                    open: function (event, ui) {
                                        $(this).html("Hata Oluştu");
                                    },
                                    close: function () {
                                        $(this).remove();
                                    },
                                    resizable: true,
                                    modal: true,
                                    buttons: {
                                        'Tamam': function () {
                                            $(this).dialog('close');
                                            window.location.reload(false);
                                        }
                                    }
                                });
                            }
                        });
                    }
                });
            </script>
        </div>
    </div>
