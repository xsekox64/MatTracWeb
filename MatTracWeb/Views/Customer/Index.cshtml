                                    $('<div title="Kaydetme İşlemi"></div>').dialog({
                                        open: function (event, ui) {
                                            $(this).html("Kaydetme Başarısız");
                                        },
                                        close: function () {
                                            $(this).remove();
                                        },
                                        resizable: true,
                                        modal: true,
                                        buttons: {
                                            'Tamam': function () {
                                                $(this).dialog('close');
                                                window.location.reload(false);
                                            }
                                        }
                                    });
                                }
                            },
